<SettingsFlyout
    x:Class="CompatibilityChecker.AppExplain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CompatibilityChecker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    IconSource="Assets/SmallLogo.png"
    Title="アプリの説明"
  x:Uid="AppDetermination"
    d:DesignWidth="346">

    <!-- この StackPanel はコンテンツ セクションの垂直レイアウト用のルート パネルとして機能します -->
    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >

        <!-- 以下の StackPanel では個々のコンテンツ セクションを定義します -->

        <!-- コンテンツ セクション 1-->
        <StackPanel Style="{StaticResource SettingsFlyoutSectionStyle}">

      <!-- セクション 1 ヘッダー -->
      <TextBlock Style="{StaticResource TitleTextBlockStyle}" x:Uid="AppDete" Text="算出方法" />

      <!-- セクション 1 ボディ -->
      <TextBlock x:Uid="AppStatementBody"  Style="{StaticResource BodyTextBlockStyle}" Margin="0,0,0,25" TextWrapping="Wrap">
        <TextBlock.Text>
          相性チェックページでは、ボックスの中身を選択し、チェックするボタンを押すことで算出することができます。
          なお、やけど状態の場合は物理技に限りこうげきが2分の1になることから設置しているので利用してください。
          攻撃側のタイプと技のタイプが一致した場合の補正もあるため、その時に応じて使用してください。
        </TextBlock.Text>
      </TextBlock>

    </StackPanel>

        <!-- 必要に応じてコンテンツ セクションを以下でさらに定義します -->

    </StackPanel>
</SettingsFlyout>
